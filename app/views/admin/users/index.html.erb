<% provide :title, t(:all_user_manager) %>
<h1><%= t :all_user_manager %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(admin_users_path, method: :get) do %>
      <div class="col-md-9">
        <%= text_field_tag :name, params[:name], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= submit_tag t(:search), name: nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</br >

<% if @users.any? %>
  <div class="text-center">
    <%= will_paginate @users %>
  </div>
  <%= t :user_search_result, count: @users.count %>
  <%= link_to admin_users_path(format: :xlsx, name: "#{params[:name]}"), class: "btn btn-info btn-xs" do %>
    <span class="glyphicon glyphicon-download-alt"></span>
    <%= t :export_excel_btn %>
  <% end %>
  <table class="table table-hover">
    <tr>
      <th><%= t :name %></th>
      <th><%= t :email %></th>
      <th><%= t :type %></th>
      <th></th>
    </tr>
    <%= render @users %>
  </table>
  <div class="text-center">
    <%= will_paginate @users %>
  </div>
<% else %>
  <%= t :no_users_found %>
<% end %>
