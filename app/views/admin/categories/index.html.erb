<% provide :title, t(:categories_title) %>
<h3><%= t :categories_title %></h3>
<hr/>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
        <span class="glyphicon glyphicon-plus-sign"></span>
        <%= t :create_new_category_label %>
      <% end %>
    </div>
  </div>
</div>
<br/>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag admin_categories_path, method: :get do %>
      <%= text_field_tag :name, params[:name], class: "form-control" %>
      <%= submit_tag t(:search), name: nil, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</br >

<% if @categories.any? %>
  <table class="table table-hover">
    <tr>
      <th><%= t :category_name_label %></th>
      <th><%= t :category_description_label %></th>
      <th><%= t :category_word_total_label %></th>
      <th></th>
    </tr>
    <%= render @categories %>
  </table>
  <div class="text-center">
    <%= will_paginate %>
  </div>
<% else %>
  <%= t :no_category_found %>
<% end %>
