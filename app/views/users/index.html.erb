<% provide :title, t(:all_user) %>
<h1><%= t :all_user %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(users_path, method: :get) do %>
      <div class="col-md-9">
        <%= text_field_tag :name, params[:name], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= submit_tag t(:search), name: nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>
