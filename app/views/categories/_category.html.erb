<tr>
  <td class="category-name">
    <%= category.name %>
  </td>
  <td class="category-description">
    <%= category.description %>
  </td>
  <td class="col-actions text-right">
    <%= link_to category, class: "btn btn-info btn-xs" do %>
      <%= t :details_label %>
    <% end %>
    <%= link_to category_lessons_path(category), method: :post,
      class: "btn btn-primary btn-xs" do %>
      <span class="glyphicon glyphicon-play"></span>
      <%= t :start_label %>
    <% end %>
  </td>
</tr>
