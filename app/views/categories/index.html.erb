<% provide :title, t(:user_categories_title) %>
<h3><%= t :categories %></h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag categories_path, method: :get do %>
      <div class="col-md-9">
        <%= text_field_tag :name, params[:name], class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= submit_tag t(:search), name: nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</br >

<% if @categories.any? %>
  <table class="table table-hover">
    <tr>
      <th><%= t :category_name_label %></th>
      <th><%= t :category_description_label %></th>
      <th><%= t :category_total_lessons %></th>
      <th></th>
    </tr>
    <%= render @categories %>
  </table>
  <div class="text-center">
    <%= will_paginate %>
  </div>
<% else %>
  <%= t :no_category_found %>
<% end %>
