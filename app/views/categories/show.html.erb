<% provide :title, t(:detail_category_title) %>

<h2><%= @category.name %></h2>
<%= image_tag @category.photo.url %>
<h3 class="panel-title"><%= t :description_label %></h3>
<p><%= @category.description %></p>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to category_lessons_path(@category), method: :post,
        class: "btn btn-primary" do %>
        <span class="glyphicon glyphicon-play"></span> <%= t :start_new_lesson %>
      <% end %>
    </div>
  </div>
</div>
<hr/>
<h3><%= t :lessons_h3_title %></h3>

<% if @lessons.any? %>
  <table class="table table-hover">
    <tr>
      <th><%= t :lesson_label %></th>
      <th><%= t :lesson_status_label %></th>
      <th><%= t :lesson_process_label %></th>
      <th></th>
    </tr>
    <%= render @lessons %>
  </table>
  <div class="text-center">
    <%= will_paginate @lessons %>
  </div>
<% else %>
  <%= t :no_lesson_found %>
<% end %>
