<% if defined?(object) && object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t :error_intro %> <%= pluralize object.errors.count, "error" %>.
    </div>
    <ul>
    <% object.errors.each do |attr, msg| %>
      <li><%= "#{attr.capitalize} #{msg}" %></li>
    <% end %>
    </ul>
  </div>
<% end %>
