<%= form_for words_path, method: :get, remote: true, html: {id: "filter_form"} do |f| %>
  <div class="row">
    <div class="col-md-3">
      <%= select_tag :category_id,
        options_from_collection_for_select(@categories, :id, :name,
          params[:category_id]), include_blank: t("key_search.all"),
            class: "form-control" %>
    </div>
    <div class="col-md-5">
      <% ["learned", "not_learn", "all_word"].each_with_index do |option, index| %>
        <div class="col-md-3">
          <div class="radio">
            <label>
              <%= radio_button_tag :option, option,
                (checked = true if params[:option] == option ||
                  params[:option].nil? && index == 2) %>
              <%= t "key_search.#{option}" %>
            </label>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-1">
      <%= submit_tag t(:filter_btn), :class => 'btn btn-sm btn-primary'%>
    </div>
  </div>
<% end %>
<hr/>
<h3><%= t :word_list %></h3>
<span id="result_count" class="text-primary">
  <%= t :word_search_result, count: @words.count%>
</span>

<div id="words">
  <%= render "words_list", words: @words %>
</div>
